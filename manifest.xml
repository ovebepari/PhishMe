<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">
  <Id>98aa348b-b26c-4178-84ba-74587fbf31a9</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Ove Bepari</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="PhishMe"/>
  <Description DefaultValue="Report Phish Emails to System Admin"/>
  <IconUrl DefaultValue="https://cdn.jsdelivr.net/gh/ovebepari/PhishMe@0.9/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://cdn.jsdelivr.net/gh/ovebepari/PhishMe@0.9/assets/icon-80.png"/>
  <SupportUrl DefaultValue="https://github.com/ovebepari/PhishMe"/>
  <AppDomains>
    <AppDomain>https://github.com/ovebepari/PhishMe</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://cdn.jsdelivr.net/gh/ovebepari/PhishMe@0.9/src/taskpane/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <Permissions>ReadWriteItem</Permissions>
  
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>

                <!-- Each control provides a button -->
                <Control xsi:type="Button" id="ActionButton">
                  <Label resid="ActionButton.Label"/>
                  <Supertip>
                    <Title resid="ActionButton.Label"/>
                    <Description resid="ActionButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <!-- This function is what I need to execute 
                    <FunctionName>forwardEmail</FunctionName>
                    -->
                    <FunctionName>forwardEmail</FunctionName>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    

    <Resources>
     
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://cdn.jsdelivr.net/gh/ovebepari/PhishMe@0.9/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://cdn.jsdelivr.net/gh/ovebepari/PhishMe@0.9/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://cdn.jsdelivr.net/gh/ovebepari/PhishMe@0.9/assets/icon-80.png"/>
      </bt:Images>
      
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://cdn.jsdelivr.net/gh/ovebepari/PhishMe@0.9/src/commands/commands.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="PhishMe Add-in"/>
        <bt:String id="ActionButton.Label" DefaultValue="PhishMe"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="ActionButton.Tooltip" DefaultValue="Phish this email to sysadmin"/>
      </bt:LongStrings>
    
    </Resources>

  </VersionOverrides>
</OfficeApp>